---
import { navData } from "../data/navData";
import Link from "../components/Link.astro";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go home">
      <img
        alt="Category image"
        src="/images/logo.png"
        alt="PA Consulting"
        width={60}
        height={60}
      />
    </a>
    <ul>
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>

  <style>
    img {
      width: fit-content; 
    }
  </style>

  <script>
    import "../scripts/nav.ts";
  </script>
</nav>
